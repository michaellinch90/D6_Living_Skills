<%- include('./partials/header')%>
  <body>
  <h2>Grocery List</h2>
<main>
        <form id="new-form" action="/groceries" method="POST">
          <label>Item:</label>
          <input type="text" name="item">
          <label>Category:</label>
          <select name="category">
            <option value="Produce">Produce</option>
            <option value="Meat">Meat</option>
            <option value="Grocery">Grocery</option>
            <option value="Dairy">Dairy</option>
            <option value="Frozen">Frozen</option>
          </select>
          <label>Estimation:</label>
          <input type="number" name="money">
          <input type="submit" value="Add Item">
        </form>
        <table>
          <thead>
              <tr>
                  <th>Item</th>
                  <th>Category</th>
                  <th>Estimation</th>
                  <th>Do we have this?</th>
                  <th>Edit</th>
              </tr>
          </thead>
          <tbody>
              <% let total = 0 %>
              <% groceries.forEach(function(g){ %>
                <% total += g.money %>
                <tr>
                  <td><%= g.item %></td>
                  <td><%= g.category %></td>
                  <td><%= g.money %></td>
                  <td>
                    <form action="/groceries/ <%= g._id %>?_method=DELETE" method="POST">
                      <input id="delete-ticket" type="submit" name="" value="Yes">
                    </form>
                  </td>
                  <td>
                    <form action="/groceries/<%= g.id %>/editGrocries" method="GET">
                      <button type="submit">Edit</button>
                  </form>
                  </td>
                </tr>
              <% }); %>
          </tbody>
      </table>
</main>
</body>
</html>

